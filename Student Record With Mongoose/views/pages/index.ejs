<!DOCTYPE html>
<html lang="en">
<head>
        <%- include('../ejsPartials/bootstrap') %>
        <%- include('../ejsPartials/logout') %>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/form.css">
    <title>Students Record</title>

</head>
<body>
  <%- include('../ejsPartials/navbar') %>
    <div class="studentsRecord">
    <div>
      <h2 style="text-align: center;">Students Record</h2>
    </div>
    <div class="addStudent">
        <a href="/newStudent" class="btn btn-success" style="width: 150px;">Add Student</a>
    </div>
    <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Student Name</th>
            <th scope="col">Father Name</th>
            <th scope="col">Email Address</th>
            <th scope="col">Department</th>
            <th scope="col">Modify/Delete</th>
          </tr>
        </thead>
        <tbody>
          
         <% students.forEach( function (student) { %>
            <tr>
                <th scope="row"><%=id++%></th>
                <td><%=student.studentName%></td>
                <td><%=student.studentFather%></td>
                <td><%=student.email%></td>
                <td><%=student.department%></td>
                <td><a href="/editStudent/<%=student._id%>" class="btn btn-primary" style="margin-right: 10px; width: 100px;">Edit</a><a href="/deleteStudent/<%=student._id%>" class="btn btn-danger" style="width: 100px;">Delete</a></td>
            </tr>
         <% }) %>
        </tbody>
      </table>
    </div>
</body>
</html>